<form class="card container mt-5 px-0" action="/products" method="POST">
    <div class="card-header">
        <h3 class="card-title">I'm looking for...</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="name">Product Name:</label>
            <input type="text" class="form-control" name="name" id="product-title" required>
        </div>
        <div class="form-group">
            <label for="description">Product Description:</label>
            <input type="text" class="form-control" name="description" required>
        </div>
        <div class="form-group">
            <label for="requirements">Requirements:</label>
            <input type="text" class="form-control" name="requirements" required>
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="text" class="form-control form-control-readonly" id="product-image-input" name="image"
                placeholder="(Choose Below)" readonly>
        </div>
        <div id="image-selector">

        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-dark">Submit</button>
    </div>
</form>