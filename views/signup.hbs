<div class="container">
    <div class="row">
        <div class="col-centered">
            <form action="/signup" class="card container px-0 mt-5" method="POST">
                <div class="card-header">
                    <h3>Sign Up</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">Full Name:</label>
                        <input type="text" name="name" autocomplete="name" class="form-control" placeholder="John Doe">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" name="email" autocomplete="email" class="form-control" placeholder="example@email.com">
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="password" autocomplete="current-password" class="form-control"
                            placeholder="*****">
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-dark" type="submit">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>
